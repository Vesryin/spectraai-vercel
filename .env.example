# Spectra AI Environment Variables
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here_change_in_production

# AI Provider Configuration
# Ollama (Local Models)
OLLAMA_MODEL=openhermes:7b-mistral-v2.5-q4_K_M
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=30

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307

# AI Provider Priority (comma-separated)
AI_PROVIDERS=ollama,openai,anthropic
DEFAULT_PROVIDER=ollama

# Server Configuration
HOST=127.0.0.1
PORT=5000

# FastAPI / Runtime
ENVIRONMENT=development
SPECTRA_AUTO_MODEL=true
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Performance Settings
FASTAPI_RELOAD=true
UVICORN_WORKERS=1
UVICORN_LOOP=auto

# Logging (optimized)
SPECTRA_LOG_LEVEL=INFO
SPECTRA_LOG_FORMAT=json
LOG_ROTATION_SIZE=10485760
LOG_BACKUP_COUNT=5

# Caching & Performance
MODEL_CACHE_TTL=300
PERSONALITY_CHECK_INTERVAL=5
REQUEST_TIMEOUT=30

# Deployment
PUBLIC_URL=https://your-domain.example
FORCE_HTTPS=false