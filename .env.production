# Production Environment
ENVIRONMENT=production
DEBUG=False

# Backend Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=<your-strong-random-secret-key>

# CORS - Frontend domains allowed to call backend
CORS_ORIGINS=https://spectraai-vercel.vercel.app,http://localhost:3000

# Ollama AI Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3.2:1b

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/spectra_ai.log

# Database (optional)
# DATABASE_URL=postgresql://user:pass@host:port/dbname

# Monitoring
HEALTH_CHECK_INTERVAL=30